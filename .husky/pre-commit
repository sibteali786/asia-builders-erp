# Lint and format staged files only (FAST)
pnpm exec lint-staged || {
  echo "âŒ Linting failed. Please fix errors before committing."
  exit 1
}

# Typecheck all files
pnpm run typecheck || {
  echo "âŒ Type checking failed. Please fix errors before committing."
  exit 1
}

# Run unit tests (FAST - only for changed files)
pnpm run test:changed || {
  echo "âŒ Unit tests failed. Please fix errors before committing."
  exit 1
}

echo "âœ… Pre-commit checks passed!"